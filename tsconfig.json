{
  "compilerOptions": {
    "target": "ES2020", // or a later ECMAScript version
    "module": "esnext", // or "ESNext" if you're using ES modules
    "outDir": "./dist", // Where compiled JS goes (if you explicitly compile)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts" // Adjust to your project's structure
  ],
  "exclude": ["node_modules"]
}
